<h1>Search Page</h1>

<div class="topbar">
  <div class="container">
    <div class="vertical-center">
      <%= link_to 'Home', root_path %> > search
    </div>
  </div>
</div>
<div class="container">
  <ul class="list-margin">
    <% if @listings.present? %>
      <% @listings.each do |listing| %>
      <li>
        <span>
          <%= listing.created_at.strftime('%B %d, %Y') %>
        </span> 
        <%= link_to listing.title, listing %> - (<%= listing.city %>, <%= listing.state %>)
      </li>
      <% end %>
    <% else %>
      <p>No listings found!</>
    <% end %>
  </ul>
</div>