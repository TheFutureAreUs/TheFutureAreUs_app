
<div class="edit-profile">
    <h1>Edit Profile</h1>
    <%= form_for(@user, html: { multipart: true }) do |f| %>
        <div>
            <%= f.label :username %><br />
            <%= f.text_field :username, class: "base-user" %>
            <br />
            <br />
            <%= f.label :description %><br />
            <%= f.text_area :description, class: "base-desc" %>
            <br />
            <br />
            <%= f.file_field :avatar, class: "image-input" %>
        </div>
            
        <br />
        <br />
        <div>
            <%= f.submit "Save Changes", class: "button sub-button" %>
        </div>
    <% end %>
</div>